# SPECTRUM KERNEL MANAGER
# Ramdisk file for profile based kernel management
# Implimentation inspired by Franco's fku profiles

# Initialization
on property:sys.boot_completed=1
    # Set default profile on first boot
    exec u:r:init:s0 root root -- /init.spectrum.sh
    exec u:r:su:s0 root root -- /init.spectrum.sh
    # Enable Spectrum support
    setprop spectrum.support 1
    # Add kernel name
    setprop persist.spectrum.kernel Chtolly

# Balance (default profile)
on property:persist.spectrum.profile=0
    # CPU
    write /sys/devices/system/cpu/cpu0/online 1
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 960000
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq 960000
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq 960000
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_max_freq 960000
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 800000
    write /sys/devices/system/cpu/cpu5/cpufreq/scaling_max_freq 800000
    write /sys/devices/system/cpu/cpu6/cpufreq/scaling_max_freq 800000
    write /sys/devices/system/cpu/cpu7/cpufreq/scaling_max_freq 800000
    # core_ctl
    write /sys/devices/system/cpu/cpu0/core_ctl/disable 0
    # msm_thermal
    write /sys/module/msm_thermal/parameters/enabled Y
    # GPU
    write /sys/class/kgsl/kgsl-3d0/max_gpuclk 400000000
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor simple_ondemand
    # I/O
    setprop sys.io.scheduler zen
    write /sys/block/mmcblk0/queue/scheduler zen
    write /sys/block/mmcblk1/queue/scheduler zen
    write /sys/block/mmcblk0/queue/read_ahead_kb 512
    write /sys/block/mmcblk1/queue/read_ahead_kb 512

# Performance (based on DrunkSauce Lite)
on property:persist.spectrum.profile=1
    # CPU
    write /sys/devices/system/cpu/cpu0/online 1
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1497600
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq 1497600
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq 1497600
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq 2000000
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_max_freq 1497600
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq 2000000
    write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 1209600
    write /sys/devices/system/cpu/cpu5/cpufreq/scaling_max_freq 1209600
    write /sys/devices/system/cpu/cpu6/cpufreq/scaling_max_freq 1209600
    write /sys/devices/system/cpu/cpu7/cpufreq/scaling_max_freq 1209600
    # core_ctl
    write /sys/devices/system/cpu/cpu0/core_ctl/disable 0
    # msm_thermal
    write /sys/module/msm_thermal/parameters/enabled N
    # GPU
    write /sys/class/kgsl/kgsl-3d0/max_gpuclk 400000000
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor simple_ondemand
    # I/O
    setprop sys.io.scheduler fiops
    write /sys/block/mmcblk0/queue/scheduler fiops
    write /sys/block/mmcblk1/queue/scheduler fiops
    write /sys/block/mmcblk0/queue/read_ahead_kb 1024
    write /sys/block/mmcblk1/queue/read_ahead_kb 1024

# Battery
on property:persist.spectrum.profile=2
    # CPU
    write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 800000
    write /sys/devices/system/cpu/cpu5/cpufreq/scaling_max_freq 800000
    write /sys/devices/system/cpu/cpu6/cpufreq/scaling_max_freq 800000
    write /sys/devices/system/cpu/cpu7/cpufreq/scaling_max_freq 800000
    # core_ctl
    write /sys/devices/system/cpu/cpu0/core_ctl/disable 1
    write /sys/devices/system/cpu/cpu0/online 0
    write /sys/devices/system/cpu/cpu1/online 0
    write /sys/devices/system/cpu/cpu2/online 0
    write /sys/devices/system/cpu/cpu3/online 0
    # msm_thermal
    write /sys/module/msm_thermal/parameters/enabled Y
    # GPU
    write /sys/class/kgsl/kgsl-3d0/max_gpuclk 220000000
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor powersave
    # I/O
    setprop sys.io.scheduler noop
    write /sys/block/mmcblk0/queue/scheduler noop
    write /sys/block/mmcblk1/queue/scheduler noop
    write /sys/block/mmcblk0/queue/read_ahead_kb 128
    write /sys/block/mmcblk1/queue/read_ahead_kb 128

# Gaming
on property:persist.spectrum.profile=3
    # CPU
    write /sys/devices/system/cpu/cpu0/online 1
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1497600
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq 1497600
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq 1497600
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_max_freq 1497600
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq 200000
    write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 1209600
    write /sys/devices/system/cpu/cpu5/cpufreq/scaling_max_freq 1209600
    write /sys/devices/system/cpu/cpu6/cpufreq/scaling_max_freq 1209600
    write /sys/devices/system/cpu/cpu7/cpufreq/scaling_max_freq 1209600
    # core_ctl
    write /sys/devices/system/cpu/cpu0/core_ctl/disable 0
    # msm_thermal
    write /sys/module/msm_thermal/parameters/enabled N
    # GPU
    write /sys/class/kgsl/kgsl-3d0/max_gpuclk 550000000
    write /sys/class/kgsl/kgsl-3d0/devfreq/governor msm-adreno-tz
    # I/O
    setprop sys.io.scheduler deadline
    write /sys/block/mmcblk0/queue/scheduler deadline
    write /sys/block/mmcblk1/queue/scheduler deadline
    write /sys/block/mmcblk0/queue/read_ahead_kb 2048
    write /sys/block/mmcblk1/queue/read_ahead_kb 2048
